{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "packages": ["packages/*"],
      "ignoreChanges": ["__tests__", "*.md"],
      "ignore": ["storybook", "website"],
      "registry": "https://registry.npmjs.com",
      "message": "chore: publish"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
