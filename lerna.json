{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "npmClient": "yarn",
  "version": "independent",
  "command": {
    "version": {
      "message": "chore: publish",
      "conventionalCommits": true,
      "private": false,
      "changelog": false,
      "exact": false
    },
    "publish": {
      "registry": "https://registry.npmjs.org"
    }
  },
  "useNx": false,
  "ignoreChanges": ["**/__tests__/**", "**/*.md"]
}
