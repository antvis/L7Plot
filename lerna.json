{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "version": {
      "message": "chore: publish",
      "conventionalCommits": true,
      "private": false,
      "changelog": false,
      "exact": false
    },
    "publish": {
      "registry": "https://registry.npmjs.org"
    }
  },
  "ignoreChanges": ["**/__tests__/**", "**/*.md"],
  "publishConfig": {
    "access": "public"
  }
}
